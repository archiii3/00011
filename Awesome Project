# package marker
#!/usr/bin/env python3
"""Simple CLI example"""

import sys
import click

@click.command()
@click.argument("message", required=False, default="Hello, World!")
def main(message: str) -> None:
    """
    Print MESSAGE to stdout.
    """
    print(f"[awesome-project] {message}")

if __name__ == "__main__":
    main()
# package marker
#!/usr/bin/env python3
"""Simple CLI example"""
